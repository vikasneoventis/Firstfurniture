<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="onefeed" sortOrder="1000">
            <label>OneFeed</label>
        </tab>
        <section id="onefeed" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>OneFeed Tracking</label>
            <tab>onefeed</tab>
            <resource>Shiv_Trackingonefeed::config</resource>
            <group id="general" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="enable" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="ss_id" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>SS ID</label>
                </field>
            </group>
        </section>
    </system>
</config>