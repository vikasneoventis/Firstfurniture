<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Aheadworks_Autorelated::css/autorelated.css"/>
    </head>
    <body>
        <referenceContainer name="page.main.actions">
            <block class="Aheadworks\Autorelated\Block\Adminhtml\Page\Menu" name="aw_autorelated_menu">
                <block class="Aheadworks\Autorelated\Block\Adminhtml\Page\Menu\Item" name="aw_autorelated_menu_item.rules">
                    <arguments>
                        <argument name="path" xsi:type="string">*/rule/index</argument>
                        <argument name="label" xsi:type="string">Manage Rules</argument>
                        <argument name="resource" xsi:type="string">Aheadworks_Autorelated::rule</argument>
                        <argument name="controller" xsi:type="string">rule</argument>
                    </arguments>
                </block>
                <block class="Aheadworks\Autorelated\Block\Adminhtml\Page\Menu\Item" name="aw_autorelated_menu_item.settings">
                    <arguments>
                        <argument name="path" xsi:type="string">adminhtml/system_config/edit/section/aw_arp</argument>
                        <argument name="label" xsi:type="string">Settings</argument>
                        <argument name="resource" xsi:type="string">Aheadworks_Autorelated::config_aw_arp</argument>
                    </arguments>
                </block>
                <block class="Aheadworks\Autorelated\Block\Adminhtml\Page\Menu\Item" name="aw_autorelated_menu_item.readme">
                    <arguments>
                        <argument name="label" xsi:type="string">Readme</argument>
                        <argument name="link_attributes" xsi:type="array">
                            <item name="href" xsi:type="string">http://confluence.aheadworks.com/display/EUDOC/Automatic+Related+Products+-+Magento+2</item>
                            <item name="target" xsi:type="string">_blank</item>
                            <item name="class" xsi:type="string">separator</item>
                        </argument>
                    </arguments>
                </block>
                <block class="Aheadworks\Autorelated\Block\Adminhtml\Page\Menu\Item" name="aw_autorelated_menu_item.support">
                    <arguments>
                        <argument name="label" xsi:type="string">Get Support</argument>
                        <argument name="link_attributes" xsi:type="array">
                            <item name="href" xsi:type="string">http://ecommerce.aheadworks.com/contacts/</item>
                            <item name="target" xsi:type="string">_blank</item>
                        </argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
